<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/box"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.366"
            motion:layout_constraintHorizontal_bias="0.495"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintEnd_toEndOf="@+id/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/box"
            motion:layout_constraintStart_toStartOf="@+id/box"
            android:layout_marginTop="60dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="@+id/box"
            android:layout_marginTop="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/box2"
            motion:layout_constraintStart_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.366" />
        <Constraint
            android:id="@+id/title"
            motion:layout_constraintEnd_toEndOf="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/box2"
            motion:layout_constraintStart_toStartOf="@+id/box2"
            android:layout_marginTop="60dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/box2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="@+id/box2"
            android:layout_marginTop="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/title"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/box3"
            motion:layout_constraintStart_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Constraint
            android:id="@+id/title2"
            motion:layout_constraintEnd_toEndOf="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/box2"
            motion:layout_constraintStart_toStartOf="@+id/box2"
            android:layout_marginTop="60dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/box2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="@+id/box2"
            android:layout_marginTop="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/title"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            motion:layout_constraintStart_toEndOf="@+id/menu1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toTopOf="@id/buttonStart"
            motion:layout_constraintVertical_bias="0.464"
            motion:layout_constraintTop_toBottomOf="@id/guideline"
            android:layout_marginStart="0dp"
            android:id="@+id/menu2"
            motion:layout_constraintEnd_toStartOf="@+id/menu3"
            android:layout_marginEnd="0dp" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu1"
            motion:layout_constraintEnd_toStartOf="@id/menu2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toTopOf="@id/buttonStart"
            motion:layout_constraintVertical_bias="0.464"
            motion:layout_constraintTop_toBottomOf="@id/guideline"
            android:layout_marginStart="36dp"
            motion:layout_constraintStart_toStartOf="@+id/buttonStart" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintVertical_bias="0.366"
            motion:layout_constraintHorizontal_bias="0.495"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintEnd_toEndOf="@+id/box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/box"
            motion:layout_constraintStart_toStartOf="@+id/box"
            android:layout_marginTop="60dp" />
        <Constraint
            android:id="@+id/textView2"
            motion:layout_constraintEnd_toEndOf="@+id/box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="@+id/box"
            android:layout_marginTop="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.366"
            motion:layout_constraintHorizontal_bias="0.495" />
        <Constraint
            android:id="@+id/title"
            motion:layout_constraintEnd_toEndOf="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/box2"
            motion:layout_constraintStart_toStartOf="@+id/box2"
            android:layout_marginTop="60dp" />
        <Constraint
            android:id="@+id/desc"
            motion:layout_constraintEnd_toEndOf="@+id/box2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="@+id/box2"
            android:layout_marginTop="24dp"
            motion:layout_constraintTop_toBottomOf="@+id/title"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/box3"
            motion:layout_constraintStart_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.366"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/menu1"
            motion:layout_constraintEnd_toStartOf="@id/menu2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toTopOf="@id/buttonStart"
            motion:layout_constraintVertical_bias="0.464"
            motion:layout_constraintTop_toBottomOf="@id/guideline"
            android:layout_marginStart="36dp"
            motion:layout_constraintStart_toStartOf="@+id/buttonStart" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2"
            motion:layout_constraintEnd_toStartOf="@id/menu3"
            motion:layout_constraintStart_toEndOf="@+id/menu1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toTopOf="@id/buttonStart"
            motion:layout_constraintVertical_bias="0.464"
            motion:layout_constraintTop_toBottomOf="@id/guideline" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3"
            motion:layout_constraintEnd_toEndOf="@+id/buttonStart"
            motion:layout_constraintStart_toEndOf="@id/menu2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toTopOf="@id/buttonStart"
            motion:layout_constraintVertical_bias="0.464"
            android:layout_marginEnd="36dp"
            motion:layout_constraintTop_toBottomOf="@id/guideline" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/menu3"
        motion:deriveConstraintsFrom="@+id/end" >
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/box3"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.366"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.495" />
        <Constraint
            android:id="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.366"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.495"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/title2"
            motion:layout_constraintEnd_toEndOf="@id/box3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@id/box3"
            motion:layout_constraintStart_toStartOf="@id/box3"
            android:layout_marginTop="60dp" />
        <Constraint
            android:id="@+id/desc2"
            motion:layout_constraintEnd_toEndOf="@id/box3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            motion:layout_constraintTop_toBottomOf="@id/title2"
            android:layout_marginStart="16dp"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="@id/box3"
            android:layout_marginTop="24dp" />
        <Constraint
            android:id="@+id/menu1"
            motion:layout_constraintEnd_toStartOf="@id/menu2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toTopOf="@id/buttonStart"
            motion:layout_constraintVertical_bias="0.464"
            motion:layout_constraintTop_toBottomOf="@id/guideline"
            android:layout_marginStart="36dp"
            motion:layout_constraintStart_toStartOf="@+id/buttonStart" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu2"
            motion:layout_constraintEnd_toStartOf="@id/menu3"
            motion:layout_constraintStart_toEndOf="@+id/menu1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toTopOf="@id/buttonStart"
            motion:layout_constraintVertical_bias="0.464"
            motion:layout_constraintTop_toBottomOf="@id/guideline" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/menu3"
            motion:layout_constraintEnd_toEndOf="@+id/buttonStart"
            motion:layout_constraintStart_toEndOf="@id/menu2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toTopOf="@id/buttonStart"
            motion:layout_constraintVertical_bias="0.464"
            android:layout_marginEnd="36dp"
            motion:layout_constraintTop_toBottomOf="@id/guideline" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/menu3" >
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>
</MotionScene>