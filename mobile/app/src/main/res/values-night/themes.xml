<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BatikLens" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/brown</item>
        <item name="colorPrimaryVariant">@color/cream</item>
        <item name="colorOnPrimary">@color/cream</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cream</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/customActionBarStyle</item>
    </style>

    <style name="customActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/brown</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/cream</item> <!-- Cream text for the title -->
    </style>


    <style name="Theme.BatikLens.uCrop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/brown</item>
        <item name="colorAccent">@color/cream</item>
    </style>

    <style name="Theme.BatikLens.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/customActiveIndicator</item>
        <item name="itemIconTint">@color/state_color_selector</item>
        <item name="itemTextColor">@color/cream</item>
        <item name="backgroundTint">@color/brown</item>
    </style>

    <style name="customActiveIndicator" parent="">
        <item name="android:color">@color/cream</item>
        <item name="android:width">56dp</item>
        <item name="android:height">28dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
</resources>


